{
  "name": "Foodle",
  "version": "2.0.0",
  "description": "A Simple Food based CRUD API ",
  "main": "index.js",
  "repository": "https://github.com/JaganKaartik/Foodle",
  "author": "JaganKaartik <kaartikjagan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node api.js",
    "dev": "nodemon api",
    "client-install": "cd client && yarn install",
    "install": "yarn install && yarn  run client-install",
    "client": "cd client && nodemon index",
    "server": "cd server && nodemon index",
    "foodle": "concurrently -n 'server,client' -c 'cyan,magenta' \"yarn run server\" \"yarn run client\""
  },
  "dependencies": {
    "@hapi/bell": "^12.1.0",
    "@hapi/cookie": "^11.0.1",
    "@hapi/hapi": "^20.0.0",
    "bcrypt": "^5.0.0",
    "concurrently": "^5.3.0",
    "hapi-cors": "^1.0.3",
    "joi": "^17.2.1",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.4"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.4"
  }
}